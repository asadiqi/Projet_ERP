<odoo>

    <!-- =========================
         ACTION
    ========================== -->
    <record id="action_bike_rental_contracts" model="ir.actions.act_window">
        <field name="name">Rental Contracts</field>
        <field name="res_model">bike.rental.contract</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- =========================
         LIST VIEW (avec couleurs)
    ========================== -->
    <record id="view_bike_rental_contract_list" model="ir.ui.view">
        <field name="name">bike.rental.contract.list</field>
        <field name="model">bike.rental.contract</field>
        <field name="arch" type="xml">
            <list
                decoration-danger="state == 'cancelled'"
                decoration-success="state == 'done'"
                decoration-warning="state == 'confirmed'"
                decoration-info="state == 'ongoing'"
            >
                <field name="name"/>
                <field name="customer_id"/>
                <field name="bike_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="duration"/>
                <field name="price"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- =========================
         FORM VIEW
    ========================== -->
    <record id="view_bike_rental_contract_form" model="ir.ui.view">
        <field name="name">bike.rental.contract.form</field>
        <field name="model">bike.rental.contract</field>
        <field name="arch" type="xml">
            <form string="Rental Contract">

                <!-- ===== HEADER / WORKFLOW ===== -->
                <header>

                    <button name="action_confirm"
                            type="object"
                            string="Confirm"
                            class="btn-primary"
                            invisible="state != 'draft'"/>

                    <button name="action_start_rental"
                            type="object"
                            string="Start Rental"
                            class="btn-success"
                            invisible="state != 'confirmed'"/>

                    <button name="action_cancel"
                            type="object"
                            string="Cancel"
                            class="btn-secondary"
                            confirm="Are you sure you want to cancel this rental contract?"
                            invisible="state in ('done','cancelled')"/>

                    <!-- BOUTON RETURN BIKE -->
                    <button name="action_return_bike"
                            type="object"
                            string="Return Bike"
                            class="btn-warning"
                            invisible="state != 'ongoing'"/>
                            
                    <!-- STATUSBAR COLORÃ‰ -->
                    <field name="state"
                           widget="statusbar"
                           statusbar_colors="{
                               'draft': 'gray',
                               'confirmed': 'blue',
                               'ongoing': 'orange',
                               'done': 'green',
                               'cancelled': 'red'
                           }"/>
                </header>

                <!-- ===== BODY ===== -->
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="customer_id"/>
                            <field name="bike_id"/>
                        </group>

                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="duration" readonly="1"/>
                            <field name="price" readonly="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Notes">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>

            </form>
        </field>
    </record>

</odoo>
