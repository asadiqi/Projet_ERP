<odoo>
    <record id="action_bike_availability_wizard" model="ir.actions.act_window">
        <field name="name">Bike Availability</field>
        <field name="res_model">bike.availability.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="view_bike_availability_wizard_form" model="ir.ui.view">
        <field name="name">bike.availability.wizard.form</field>
        <field name="model">bike.availability.wizard</field>
        <field name="arch" type="xml">
            <form string="Bike Availability">
                <group>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <button name="action_check_availability"
                            string="Check Availability"
                            type="object"
                            class="btn-primary"/>
                </group>
                <group string="Available Bikes">
                    <field name="available_bike_ids"
                           mode="kanban,tree"
                           readonly="1"/>
                </group>
                <footer>
                    <button string="Close" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>