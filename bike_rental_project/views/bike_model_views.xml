<odoo>
    <!-- Action -->
    <record id="action_bike_models" model="ir.actions.act_window">
        <field name="name">Bikes</field>
        <field name="res_model">bike.model</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- List view -->
    <record id="view_bike_model_list" model="ir.ui.view">
        <field name="name">bike.model.list</field>
        <field name="model">bike.model</field>
        <field name="arch" type="xml">
            <list>
                <field name="image" widget="image" class="oe_avatar"/>
                <field name="name"/>
                <field name="brand"/>
                <field name="bike_type"/>
                <field name="product_id" string="Linked Product"/>
                <field name="price"/>
                <field name="available"/>
            </list>
        </field>
    </record>

    <!-- Form view -->
    <record id="view_bike_model_form" model="ir.ui.view">
        <field name="name">bike.model.form</field>
        <field name="model">bike.model</field>
        <field name="arch" type="xml">
            <form string="Bike">
                <header>
                    <button name="action_create_product"
                        string="Create Product"
                        type="object"
                        class="btn-secondary"
                        invisible="product_id"/>
                                    
                    <button name="action_view_sales"
                            type="object"
                            string="Sales"
                            class="btn-primary"
                            invisible="sale_count == 0">
                        <field name="sale_count" widget="statinfo"/>
                    </button>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="brand"/>
                            <field name="bike_type"/>
                            <field name="product_id"/>
                            <field name="price"/>
                            <field name="available" readonly="1"/>
                        </group>

                        <group>
                            <label for="image"/>
                            <div class="oe_avatar">
                                <field name="image" widget="image" class="oe_avatar"/>
                            </div>
                        </group>
                    </group>

                    <notebook>

                        <!-- Description -->
                        <page string="Description">
                            <field name="description"/>
                        </page>

                        <!-- ðŸ”½ GALERIE Dâ€™IMAGES -->
                        <page string="Catalogue">
                            <field name="image_ids">
                                <list editable="bottom">
                                    <field name="sequence"/>
                                    <field name="name"/>
                                    <field name="image" widget="image"/>
                                </list>
                            </field>
                        </page>

                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>