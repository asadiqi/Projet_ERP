<odoo>

    <!-- Action -->
    <record id="action_bike_models" model="ir.actions.act_window">
        <field name="name">Vélos</field>
        <field name="res_model">bike.model</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Vue liste -->
    <record id="view_bike_model_list" model="ir.ui.view">
        <field name="name">bike.model.list</field>
        <field name="model">bike.model</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="brand"/>
                <field name="bike_type"/>
                <field name="price"/>
                <field name="available"/>
            </list>
        </field>
    </record>

    <!-- Vue form -->
    <record id="view_bike_model_form" model="ir.ui.view">
        <field name="name">bike.model.form</field>
        <field name="model">bike.model</field>
        <field name="arch" type="xml">
            <form string="Vélo">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="brand"/>
                        <field name="bike_type"/>
                        <field name="price"/>
                        <field name="available" readonly="1"/>
                        <field name="description"/>
                        <field name="image"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
