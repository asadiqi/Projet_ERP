<odoo>

    <!-- Action : ouvre la vue list+form des contrats -->
    <record id="action_bike_rental_contracts" model="ir.actions.act_window">
        <field name="name">Contrats de location</field>
        <field name="res_model">bike.rental.contract</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Vue liste -->
    <record id="view_bike_rental_contract_list" model="ir.ui.view">
        <field name="name">bike.rental.contract.list</field>
        <field name="model">bike.rental.contract</field>
        <field name="arch" type="xml">
            <list string="Contrats de location">
                <field name="name"/>
                <field name="customer_id"/>
                <field name="bike_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="duration" string="DurÃ©e (jours)"/>
                <field name="price" string="Prix total"/>
            </list>
        </field>
    </record>

    <!-- Vue formulaire -->
    <record id="view_bike_rental_contract_form" model="ir.ui.view">
        <field name="name">bike.rental.contract.form</field>
        <field name="model">bike.rental.contract</field>
        <field name="arch" type="xml">
            <form string="Contrat de location">
                <sheet>

                    <group>
                        <group>
                            <field name="name"/>
                            <field name="customer_id"/>
                        </group>

                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="duration" readonly="1"/>
                            <field name="price" readonly="1"/>
                        </group>
                    </group>

                    <!-- Onglet pour la zone Notes -->
                    <notebook>
                        <page string="Notes">
                            <field name="notes"/>
                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>

</odoo>
