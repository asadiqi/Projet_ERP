<odoo>

    <!-- Action: opens list+form view of contracts -->
    <record id="action_bike_rental_contracts" model="ir.actions.act_window">
        <field name="name">Rental Contracts</field>
        <field name="res_model">bike.rental.contract</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- List view -->
    <record id="view_bike_rental_contract_list" model="ir.ui.view">
        <field name="name">bike.rental.contract.list</field>
        <field name="model">bike.rental.contract</field>
        <field name="arch" type="xml">
            <list string="Rental Contracts">
                <field name="name"/>
                <field name="customer_id"/>
                <field name="bike_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="duration" string="Duration (days)"/>
                <field name="price" string="Total Price"/>
            </list>
        </field>
    </record>

    <!-- Form view -->
    <record id="view_bike_rental_contract_form" model="ir.ui.view">
        <field name="name">bike.rental.contract.form</field>
        <field name="model">bike.rental.contract</field>
        <field name="arch" type="xml">
            <form string="Rental Contract">
                <sheet>

                    <group>
                        <group>
                            <field name="name"/>
                            <field name="customer_id"/>
                        </group>

                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="duration" readonly="1"/>
                            <field name="price" readonly="1"/>
                        </group>
                    </group>

                    <!-- Notebook for Notes section -->
                    <notebook>
                        <page string="Notes">
                            <field name="notes"/>
                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>

</odoo>